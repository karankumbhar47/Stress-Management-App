<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:orientation="vertical"
    tools:context=".SettingFragments.ProfileFragment">

    <androidx.cardview.widget.CardView
        android:id="@+id/head_card"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:elevation="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:id="@+id/close_button_cardView"
                app:cardCornerRadius="5dp"
                android:layout_width="57dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginStart="5dp"
                android:foreground="?attr/selectableItemBackgroundBorderless">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:src="@drawable/arrow_back" />

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/installation_site_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Profile"
                android:textColor="@color/blue"
                android:textSize="20sp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="visible">

                <ImageView
                    android:id="@+id/edit_profile_button"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="end"
                    android:layout_marginEnd="5dp"
                    android:src="@drawable/edit_black" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/profile_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:elevation="10dp"
                    app:cardBackgroundColor="@color/button_color"
                    app:cardCornerRadius="360dp">

                    <ImageView
                        android:id="@+id/profile_image_view"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:gravity="center"
                        android:src="@drawable/user_outline"
                        android:textColor="@color/background_color"
                        android:textSize="80sp" />
                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:text=" @User "
                    android:textColor="@color/black"
                    android:textSize="23sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" premium"
                    android:textColor="@color/custom_blue"
                    android:textSize="16sp" />

            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:id="@+id/show_profile_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:orientation="vertical"
                app:cardCornerRadius="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <TextView
                        android:id="@+id/full_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:drawablePadding="10dp"
                        android:hint="Name "
                        android:textColor="@color/black"
                        android:textSize="17sp"
                        app:drawableLeftCompat="@drawable/user" />

                    <TextView
                        android:id="@+id/mobile_number"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:drawablePadding="10dp"
                        android:gravity="center_vertical"
                        android:hint="Mobile Number"
                        android:textColor="@color/black"
                        android:textSize="17sp"
                        app:drawableLeftCompat="@drawable/phone" />

                    <TextView
                        android:id="@+id/email_textView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:drawablePadding="10dp"
                        android:gravity="center_vertical"
                        android:hint="Eamil"
                        android:textColor="@color/black"
                        android:textSize="17sp"
                        app:drawableLeftCompat="@drawable/email" />


                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:visibility="gone"
                android:id="@+id/edit_profile_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    app:cardCornerRadius="20dp">

                    <EditText
                        android:id="@+id/edit_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:drawableStart="@drawable/user"
                        android:drawablePadding="20dp"
                        android:gravity="center_vertical"
                        android:hint="Full Name"
                        android:importantForAutofill="no"
                        android:padding="17dp"
                        android:textColor="@color/custom_blue"
                        android:textColorHint="@color/black"
                        tools:ignore="TextFields" />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    app:cardCornerRadius="20dp">

                    <EditText
                        android:id="@+id/edit_mobile"
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:drawableStart="@drawable/phone"
                        android:drawablePadding="20dp"
                        android:gravity="center_vertical"
                        android:hint="Mobile Number"
                        android:importantForAutofill="no"
                        android:inputType="number"
                        android:padding="17dp"
                        android:textColor="@color/custom_blue"
                        android:textColorHint="@color/black" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    app:cardCornerRadius="20dp">

                    <EditText
                        android:id="@+id/edit_email"
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:drawableStart="@drawable/email"
                        android:drawablePadding="20dp"
                        android:gravity="center_vertical"
                        android:hint="Email"
                        android:importantForAutofill="no"
                        android:inputType="textEmailAddress"
                        android:padding="17dp"
                        android:textColor="@color/custom_blue"
                        android:textColorHint="@color/black" />
                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    app:cardCornerRadius="20dp">


                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/update_profile"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_gravity="start"
                        android:background="@color/button_color"
                        android:clickable="false"
                        android:drawableEnd="@drawable/right_arrow"
                        android:foreground="?attr/selectableItemBackgroundBorderless"
                        android:gravity="center"
                        android:text="Update"
                        android:textAllCaps="false"
                        android:textColor="@color/black" />
                </androidx.cardview.widget.CardView>


            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
