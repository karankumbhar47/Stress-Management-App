<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".OthersFragments.StressResult">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:elevation="10dp"
            android:id="@+id/head_card">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:id="@+id/close_button_cardView"
                    android:layout_width="57dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="5dp"
                    android:layout_gravity="center"
                    android:foreground="?attr/selectableItemBackgroundBorderless"
                    app:cardCornerRadius="5dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp"
                        android:src="@drawable/arrow_back" />

                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/yoga_pose_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="Your Score"
                    android:textColor="@color/blue"
                    android:textSize="18sp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/stress_lottie"
            android:layout_margin="10dp"
            android:visibility="gone"
            android:layout_gravity="center"
            app:lottie_rawRes="@raw/stress"
            android:layout_width="200dp"
            android:layout_height="200dp"/>

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/free_lottie"
            android:layout_margin="10dp"
            android:layout_gravity="center"
            app:lottie_rawRes="@raw/free"
            android:layout_width="200dp"
            android:layout_height="200dp"/>

        <TextView
            android:textColor="@color/blue"
            android:layout_gravity="center"
            android:textStyle="bold|italic"
            android:textSize="28sp"
            android:text="Your Score is "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_margin="10dp"
            android:layout_gravity="center"
            android:id="@+id/score"
            android:textSize="38sp"
            android:text="10/10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/back_button"
            app:cardCornerRadius="10dp"
            android:elevation="10dp"
            app:cardElevation="20dp"
            android:layout_marginTop="50dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:padding="15dp"
                android:textColor="@color/blue"
                android:textStyle="bold"
                android:text="Go Back"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </androidx.cardview.widget.CardView>

    </LinearLayout>
</FrameLayout>